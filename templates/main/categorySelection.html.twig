<div class="row">
    {% set icons = {
        'movies': 'fa-film',
        'shows': 'fa-television'
    } %}
    {% for category in categories %}
        {% for subCategory in category.subCategories %}
            <div class="col-md-4 my-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">
                            <i class="fa {{ icons[category.id] }}"></i>
                            {{ subCategory }}
                        </h1>
                        <p class="card-text">

                        </p>
                        <a class="btn btn-primary ml-auto" href="{{ category.id ~ '/' ~ subCategory }}">
                            weiter
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
