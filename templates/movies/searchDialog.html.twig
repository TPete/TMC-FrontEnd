<div class="modal fade" id="movie-search-box" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Suchen</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="get" action="">
                <div class="modal-body">
                    <div class="container">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="filter">Suche</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" name="filter" id="filter" value="{{ filter }}" placeholder="Titel, Darsteller, Regie, ...">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="genre">Genres</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="genre" id="genre">
                                    <option value=""></option>
                                    {% for option in genreOptions %}
                                        <option value="{{ option }}" {% if option == genre %}selected="selected"{% endif %}>{{ option }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="list">Listen</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="list" id="list">
                                    <option value=""></option>
                                    {% for row in listOptions %}
                                        <option value="{{ row["id"] }}" {% if row['id'] == list %}selected="selected"{% endif %}>{{ row["name"] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="collection">Reihen</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="collection" id="collection">
                                    <option value=""></option>
                                    {% for row in collectionOptions %}
                                        <option value="{{ row["id"] }}" {% if row['id'] == collection %}selected="selected"{% endif %}>{{ row["name"] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Ok</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Schlie√üen</button>
                </div>
            </form>
        </div>
    </div>
</div>
