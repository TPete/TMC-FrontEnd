{% extends "main/headerBar/default.html.twig" %}

{% block nav %}
    {{ parent() }}
{% endblock %}

{% block buttons %}
    {% set class1 = (filter is empty and genres is empty and collection == 0 and list == 0 and sort == "date_desc") ? " active" : ""  %}
    {% set class2 = (filter is empty and genres is empty and collection == 0 and list == 0 and sort == "name_asc") ? " active" : "" %}

    <form class="form-inline float-xs-left mr-2">
        <input id="instant-search" class="form-control" placeholder="Suche">
    </form>
    <div class="btn-group">
        <a class="btn btn-secondary{{ class1 }}" href="?sort=date_desc">Datum</a>
        <a class="btn btn-secondary{{ class2 }}" href="?sort=name_asc">Name</a>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#movie-search-box">
            Suche
        </button>
    </div>
{% endblock %}
