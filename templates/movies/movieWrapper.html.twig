{% for movie in movies %}
    {% include "movies/movieCard.html.twig" with {
        'id': movie['id'],
        'movie_db_id': movie['attributes']['movie_db_id'],
        'poster': movie['attributes']['poster'],
        'poster_big': movie['attributes']['poster_big'],
        'title': movie['attributes']['title'],
        'overview': movie['attributes']['overview'],
        'year': movie['attributes']['release_date']|slice(0, 4),
        'countries': movie['attributes']['countries']|slice(0, 3),
        'genres': movie['attributes']['genres']|slice(0, 3),
        'actors': movie['attributes']['actors']|slice(0, 3),
        'directors': movie['attributes']['directors'],
        'info': movie['attributes']['info'],
        'filename': movie['attributes']['filename'],
        'collection_id': movie['attributes']['collection_id'],
        'collection_name': movie['attributes']['collection_name']
    } %}
{% endfor %}
